<link rel="stylesheet" href="/css/login.css">

<div class="login-body">
    <div class="login-container" id="login_container">
        <video class="video-background" autoplay muted loop>
            <source src="/images/179908-862981818_small.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="form-container sign-up-container">
            <form id="signup-form">
                <h1 class="login-h1">Join Today.</h1>


                <input type="text" placeholder="Username" id="username-input-signup" />
                <input type="password" placeholder="Password" id="password-input-signup" />
                <button type="submit" id="signup-btn">Create account</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form id="login-form">
                <h1 class="login-h1">Sign In</h1>


                <input type="text" placeholder="Username" id="username-input-login" />
                <input type="password" placeholder="Password" id="password-input-login" />
                <a href="#">Forgot your password?</a>
                <button type="submit" id="login-btn">Login</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="login-h1">I Have Returned!</h1>

                    <button class="ghost" id="signIn">Login</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1 class="login-h1">Start Your Adventure!</h1>

                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>
<script src="/js/signup.js"></script>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SenpaiSocial</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>

<body>
  {{! Header }}
  <header class="container min-vw-100 mx-0 py-2" id="header">
    {{! Navbar }}
    <nav class="row align-items-center" id="nav">
      {{!-- flex item 1 LOGO --}}
      <div class="col-3 text-center" id="logo-container">
        <img src="/images/ss-logo-placeholder.png" alt="SenpaiSocial logo" class="img-fluid pt-1">
      </div>
      {{#if loggedIn}}
      {{!-- flex item 2 HOME & PROFILE --}}
      <div class="col-2 p-0 d-flex flex-row ">
        <div class="ps-3 pt-2 col-4" id="btn-container">
          <button type="button" class="btn" id="home-btn">Home</button>
        </div>

        <div class="pt-2" id="btn-container">
          <div class="btn-group">
            <button type="button" class="btn" id="profile-btn">My Profile</button>
            <button type="button" class="btn dropdown-toggle dropdown-toggle-split p-0" id="profile-btn" data-bs-toggle="dropdown"
              aria-expanded="false">
              <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Edit Profile</a></li>
              <li><a class="dropdown-item" href="#">View Friends</a></li>
              <li><a class="dropdown-item" href="#">View Clans</a></li>
              <li><a class="dropdown-item" href="#">Post New Status</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item logout" href="#">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
      {{!-- flex item 3 SEARCH --}}
      <div class="col-5 ">
        <div class="d-flex justify-content-center form-inputs">
          <input class="w-80 form-control" type="text" placeholder="Search any user...">
          <i class="bx bx-search"></i>
        </div>
      </div>
      {{!-- flex item 4 MARKET & LOGOUT --}}
      <div class="col-2 d-flex justify-content-end pe-6">
        <div class="pt-2" id="btn-container">
          <button type="button" class="btn" id="market-btn">Marketplace</button>
        </div>

        <div class="ps-4 pt-2 col-4" id="btn-container">
          <button type="button" class="btn logout" id="logout-btn">Logout</button>
        </div>
      </div>
      {{/if}}
      </div>
    </nav>
  </header>

  {{! Content }}
  <main>
    {{{body}}}
  </main>

  {{! Footer }}
  <footer id="footer">
    <h1>This footer is showing up on every page!</h1>
  </footer>

  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
